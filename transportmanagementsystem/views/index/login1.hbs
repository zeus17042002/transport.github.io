<div class="row">
    <div class="col-4 d-none d-xxl-block">
        <img src="/images/login.jpg" width="500px" height="500px" alt="">
    </div>
    <div class="col-xxl-8">
        <div class="d-flex align-items-center py-4 bg-body-tertiary">
            <main class="form-signin w-100 m-auto">
                <form style="max-width: 600px;" class="m-auto" method="post" action="/login">
                <a href="/">
                    <img class="mb-4 " src="/images/logo.png" alt="" width="72" height="57">
                </a>
                    <div class="row justify-content-md-center">
                        <div class="col-4">
                            <h1 class="h3 mb-3 fw-normal">Sign In</h1>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="name"
                            name="username" value="{{body.username}}">
                        <label for="floatingInput">Username</label>
                        
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" class="form-control" id="floatingPassword" placeholder="Password"
                            name="password" value="{{body.password}}">
                        <label for="floatingPassword">Password</label>
                        
                    </div>
                    <div class="invalid-feedback mt-3">
                        {{Err}}
                    </div>

                    <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
                    <p class="mt-5 mb-3 text-body-secondary">COPYRIGHT © 2023 NHÓM 54</p>
                </form>
            </main>
        </div>
    </div>
</div>